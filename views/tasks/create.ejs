<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nueva Tarea - Express App</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/header') %>

  <main class="container">
    <div class="page-header">
      <h2>Nueva Tarea</h2>
      <a href="/tasks" class="btn btn-secondary">Volver</a>
    </div>

    <div class="form-container">
      <form action="/tasks" method="POST">
        <div class="form-group">
          <label for="project_id">Proyecto:</label>
          <select id="project_id" name="project_id" required>
            <option value="">Seleccione un proyecto</option>
            <% projects.forEach(project => { %>
              <option value="<%= project.id %>"><%= project.name %></option>
            <% }); %>
          </select>
        </div>

        <div class="form-group">
          <label for="name">Nombre de la Tarea:</label>
          <input 
            type="text" 
            id="name" 
            name="name" 
            required
            placeholder="Ingrese el nombre de la tarea"
          >
        </div>

        <div class="form-group">
          <label for="start_date">Fecha de Inicio:</label>
          <input 
            type="date" 
            id="start_date" 
            name="start_date" 
            required
          >
        </div>

        <div class="form-group">
          <label for="end_date">Fecha de Fin (Opcional):</label>
          <input 
            type="date" 
            id="end_date" 
            name="end_date" 
          >
        </div>

        <div class="form-group">
          <label for="status_task_id">Estado:</label>
          <select id="status_task_id" name="status_task_id" required>
            <option value="">Seleccione un estado</option>
            <% statusTasks.forEach(status => { %>
              <option value="<%= status.id %>"><%= status.name %></option>
            <% }); %>
          </select>
        </div>

        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Crear Tarea</button>
          <a href="/tasks" class="btn btn-secondary">Cancelar</a>
        </div>
      </form>
    </div>
  </main>

  <footer>
    <div class="container">
      <p>&copy; 2025 Express App - Node.js + PostgreSQL</p>
    </div>
  </footer>
</body>
</html>
